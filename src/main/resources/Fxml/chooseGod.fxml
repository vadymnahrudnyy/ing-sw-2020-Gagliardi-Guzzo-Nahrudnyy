<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<StackPane fx:id="singleGodStackPane" prefHeight="720.0" prefWidth="1280.0" style="-fx-background-color: black;" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.polimi.ingsw.PSP30.View.Gui.GodsController">
   <stylesheets><URL value="@../GodsButton.css" /></stylesheets>
   <children>
      <Region opacity="0.2" prefHeight="720.0" prefWidth="1280.0" style="-fx-background-color: black;" styleClass="bg_gods" />
      <BorderPane fx:id="singleGodBorderPane" StackPane.alignment="CENTER">
         <right>
            <VBox alignment="CENTER_LEFT" prefHeight="200.0" prefWidth="100.0" spacing="20.0" BorderPane.alignment="TOP_CENTER">
               <children>
                  <ToggleButton fx:id="firstGod" mnemonicParsing="false" onMouseClicked="#firstGodSelected" prefHeight="227.0" prefWidth="150.0" styleClass="selectGodButton">
                     <VBox.margin>
                        <Insets left="25.0" />
                     </VBox.margin>
                  </ToggleButton>
                  <ToggleButton fx:id="secondGod" layoutX="10.0" layoutY="10.0" mnemonicParsing="false" onMouseClicked="#secondGodSelected" prefHeight="227.0" prefWidth="150.0" styleClass="selectGodButton">
                     <VBox.margin>
                        <Insets left="25.0" />
                     </VBox.margin>
                  </ToggleButton>
                  <ToggleButton fx:id="thirdGod" layoutX="10.0" layoutY="230.0" mnemonicParsing="false" onMouseClicked="#thirdGodSelected" prefHeight="227.0" prefWidth="150.0" styleClass="selectGodButton">
                     <VBox.margin>
                        <Insets left="25.0" />
                     </VBox.margin>
                  </ToggleButton>
                  <ImageView fx:id="selectSingleGod" fitHeight="150.0" fitWidth="200.0" onMouseClicked="#handleSingleGodSelectionButton" pickOnBounds="true" preserveRatio="true" styleClass="select">
                     <image>
                        <Image url="@../Images/Buttons/selectGodButton.png" />
                     </image>
                  </ImageView>
               </children>
               <BorderPane.margin>
                  <Insets right="20.0" />
               </BorderPane.margin>
            </VBox>
         </right>
      </BorderPane>
   </children>
</StackPane>
